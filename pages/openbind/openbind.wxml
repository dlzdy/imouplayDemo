<view class="page">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<view class="weui-form__title">登录乐橙开放平台开发者账号</view>
			<!--	<view class="weui-form__desc"></view>  -->
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">

				<view class="weui-cells weui-cells_form">
					<view class="weui-cell">
						<view class="weui-cell__hd"><label class="weui-label">APP ID</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindinput="onAppIdInput" type='text' value="{{appid}}" bindblur='appid' placeholder="请输入APP ID" />
						</view>
					</view>
					<view class="weui-cell">
						<view class="weui-cell__hd"><label class="weui-label">APP SECRET</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" bindinput="onAppSecretInput" type='test' password="true" value="{{appsecret}}" bindblur='appsecret' placeholder="请输入APP SECRET" />
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="weui-form__tips-area">
			<label for="weuiAgree" class="weui-agree">
				<span class="weui-agree__text">请登录<a href="https://open.imoulife.com">
						乐橙开放平台网站</a> </span>
			</label>
				<label for="weuiAgree" class="weui-agree">
				<span class="weui-agree__text">点击"控制台--应用详情页面"获取APP ID和APP Secret
				</span>
			</label>
		</view>
		<view class="weui-form__opr-area">
			<button type="primary" bindtap='onBindOpenAccount' style="background-color: #f18d00;">登录</button>
		</view>
		
		<view class="weui-form__extra-area">
			<view class="weui-footer">
			</view>
		</view>
	</view>
</view>